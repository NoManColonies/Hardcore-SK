  <ThingDef Name="BaseDollToy" Abstract="True" ParentName="BaseWeapon">
    <techLevel>Medieval</techLevel>
    <smeltable>false</smeltable>
    <thingCategories>
      <li>Toy</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
	<statBases>
      <Beauty>3</Beauty>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <workSpeedStat>TailoringSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  
  <ThingDef ParentName="BaseDollToy">
    <defName>Thrumbo_Doll</defName>
    <label>thrumbo doll</label>
    <description>Cute thrumbo doll. Boys and Girls all like it.</description>
    <graphicData>
      <texPath>Things/Item/Dolls/trumboDoll</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>60</costStuffCount>
    <statBases>
      <WorkToMake>3500</WorkToMake>
      <Mass>0.3</Mass>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <recipeMaker>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <weaponTags>
      <li>Toy</li>
    </weaponTags>
    <tools>
      <li>
        <label>Body</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  
