<?xml version="1.0" encoding="utf-8" ?>
<Defs>  
  <ThingDef Name="ReligionBookBase" Abstract="True">
    <thingClass>Religion.ThingWithComps_Book</thingClass>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <category>Item</category>
    <pathCost>10</pathCost>
    <useHitPoints>true</useHitPoints>
	<selectable>true</selectable>	
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
	  <Mass>0.3</Mass>
      <WorkToMake>2000</WorkToMake>
      <MarketValue>350</MarketValue>	
      <MaxHitPoints>20</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <SellPriceFactor>0.25</SellPriceFactor>
    </statBases>
    <stackLimit>1</stackLimit>
    <tradeNeverStack>true</tradeNeverStack>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Neolithic</techLevel>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>	
    <comps>
      <li Class="CompProperties_Forbiddable"/>     
    </comps>
<recipeMaker>
      <workSkill>Social</workSkill>
      <researchPrerequisite>ReligionRelics</researchPrerequisite>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <!--<disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>-->
      </defaultIngredientFilter>    
    </recipeMaker>  
    <costList>
      <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
  </ThingDef>

  <ThingDef ParentName="ReligionBookBase">
  <defName>BookOfTynanReligion</defName>
  <label>Book of TechnoGod religion</label>
  <description>Dedicated to the ancient machines, telling about the techno-god who created them during the creation of the world.</description>
    <graphicData>
      <texPath>Item/Resource/Books/ReligionBook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>    
    <comps>
    	<li Class="Religion.CompProperties_CompReligionBook">
    		<religionTrait>TynanReligion</religionTrait>
    	</li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="ReligionBookBase">
  <defName>BookOfSpaceSpiritsReligion</defName>
  <label>Book of Zeon the Lighthander</label>
  <description>Dedicated to zeon ion-phase, the lightning. The progenitor of the race of mechanoids.</description>
    <graphicData>
      <texPath>Item/Resource/Books/ReligionBook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>    
    <comps>
    	<li Class="Religion.CompProperties_CompReligionBook">
    		<religionTrait>SpaceSpiritsReligion</religionTrait>
    	</li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="ReligionBookBase">
  <defName>BookOfSerpentReligion</defName>
  <label>Book of iGUF Cult</label>
  <description>About the sacred cult of death. About life after death and the solemn moment of meeting the death face to face.</description>
    <graphicData>
      <texPath>Item/Resource/Books/ReligionBook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>    
    <comps>
      <li Class="Religion.CompProperties_CompReligionBook">
        <religionTrait>SerpentReligion</religionTrait>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="ReligionBookBase">
  <defName>BookOfMotherReligion</defName>
  <label>Book of Green essence</label>
  <description>Telling about the theory of relativity of a singularity with the formation of green holes, on space-time and a big green explosion.</description>
    <graphicData>
      <texPath>Item/Resource/Books/ReligionBook</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>    
    <comps>
      <li Class="Religion.CompProperties_CompReligionBook">
        <religionTrait>MotherReligion</religionTrait>
      </li>
    </comps>
  </ThingDef>
</Defs>