<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <!-- ========== Add arm groups, make CE compatible with shields  ========== -->
  <!-- ==================== Orassan ==================== -->

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/BodyDef[defName = "Orassan"]/corePart/parts/li[def="Shoulder"]/parts/li[customLabel = "left arm"]/groups</xpath>
    <value>
      <li>LeftArm</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/BodyDef[defName = "Orassan"]/corePart/parts/li[def="Shoulder"]/parts/li[customLabel = "right arm"]/groups</xpath>
    <value>
      <li>RightArm</li>
    </value>
  </Operation>
  
  <!-- ==================== HumanoidTerminator ==================== -->
  
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/BodyDef[defName = "HumanoidTerminator"]/corePart/parts/li[def="TerminatorShoulder"]/parts/li[customLabel = "left arm"]/groups</xpath>
    <value>
      <li>LeftArm</li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/BodyDef[defName = "HumanoidTerminator"]/corePart/parts/li[def="TerminatorShoulder"]/parts/li[customLabel = "right arm"]/groups</xpath>
    <value>
      <li>RightArm</li>
    </value>
  </Operation>
	
</Patch>